prolog:
  faits:
    - "question('Q-CHAT-017', 'Observateur Conscient - Pas de problématique')."
    - "categorie('Q-CHAT-017', chat_alchimique)."
    - "statut('Q-CHAT-017', decide)."
    - "principe('Q-CHAT-017', 'pas_de_problematique')."
    - "principe('Q-CHAT-017', 'point_depart_transformation')."
    - "principe('Q-CHAT-017', 'champ_epigenetique')."
    - "principe('Q-CHAT-017', 'observateur_conscient')."

  regles:
    - |
      % Il n'y a pas de problématique, seulement des points de départ
      point_depart(Situation) :-
          apparait_comme_probleme(Situation),
          chemin_transformation(Situation, _).

    - |
      % Le champ transforme épigénétiquement
      transformation(Holon) :-
          baigne_dans_champ(Holon, oxc),
          frequences_coherentes(oxc),
          modification_epigenetique(Holon).

    - |
      % Observer sans juger = relier pas séparer
      observation_consciente(Holon, Situation) :-
          observe(Holon, Situation),
          \+ juge(Holon, Situation),
          relie(Holon, Situation).

